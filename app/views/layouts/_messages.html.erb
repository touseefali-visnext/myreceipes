<div class="row">
    <div class="col-md-10 offset-md-1">
        <% flash.each do |name, msg| %>
            <div class="alert alert-<%= name %>" role="alert">
                <a href="#" class="close" data-bs-dismiss="alert">&#215;</a>
                <%= msg %>
            </div>
        <% end %>
    </div>
</div>
